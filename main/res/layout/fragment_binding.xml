<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNormalToast"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Click fast 5 times to make a Toast" />

        <Button
            android:id="@+id/btnRxToast"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Click fast 5 times to make a Toast" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvReverseString"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="reversed String" />

        <EditText
            android:id="@+id/etNormalSearch"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Normal search" />

        <EditText
            android:id="@+id/etRxSearch"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:hint="RX search" />
    </LinearLayout>

    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:orientation="vertical"
        android:rowCount="3">

        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:text="Username\nat least 4 characters"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etUserName"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:hint="username" />

        <ImageView
            android:id="@+id/imgUserNameError"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="2"
            android:layout_row="0"
            android:padding="5dp"
            android:src="@drawable/ic_error"
            android:visibility="invisible" />

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:text="password\nat least 8 characters\n 1 UC, 1 SC"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:hint="password"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/imgPasswordError"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="2"
            android:layout_row="1"
            android:padding="5dp"
            android:src="@drawable/ic_error"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnSend"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="Submit" />
    </GridLayout>

</LinearLayout>